<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivFriend3"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-153dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="Venom"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="321dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="26dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvVenue"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvTime"
        android:layout_marginEnd="23dp"
        android:text="Venue"
        android:textSize="24sp"
        android:gravity="center"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivFriend1"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        tools:text="Time and Date" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPoster"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Follows Adonis Creed's life inside and outside of the ring as he deals with new found fame, issues with his family, and his continuing quest to become a champion." />

    <ImageView
        android:id="@+id/ivFriend1"
        android:layout_width="109dp"
        android:layout_height="100dp"
        android:layout_above="@+id/tvOrganizer"
        android:layout_alignEnd="@+id/tvVenue"
        app:srcCompat="@drawable/friend1" />

    <ImageView
        android:id="@+id/ivFriend2"
        android:layout_width="89dp"
        android:layout_height="77dp"
        android:layout_alignStart="@+id/ivPoster"
        android:layout_alignTop="@+id/ivFriend3"
        app:srcCompat="@drawable/friend2" />

    <ImageView
        android:id="@+id/ivFriend3"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_above="@+id/tvOrganizer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/friend3" />

    <Button
        android:id="@+id/btnAtten"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="45dp"
        android:background="@android:color/holo_green_light"
        android:text="Going"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNotAtten"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAtten"
        android:layout_toEndOf="@+id/tvTitle"
        android:background="@android:color/holo_red_dark"
        android:text="Not Going"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="328dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:gravity="center"
        android:text="Organizer"
        android:textSize="18sp" />
</RelativeLayout>