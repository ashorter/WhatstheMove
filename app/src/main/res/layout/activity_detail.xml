<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivFriend3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="Venom"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTitle"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvVenue"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvTime"
        android:layout_marginEnd="23dp"
        android:text="Venue"
        android:textSize="18sp"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvOverview"
        android:layout_marginBottom="260dp"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Time and Date" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="350dp"
        android:layout_height="149dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnAtten"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="136dp"
        android:text="TextView"
        android:textSize="14sp"
        tools:text="Follows Adonis Creed's life inside and outside of the ring as he deals with new found fame, issues with his family, and his continuing quest to become a champion." />

    <ImageView
        android:id="@+id/ivFriend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivFriend2"
        android:layout_marginEnd="43dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ivFriend3"
        android:layout_marginStart="16dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="181dp"
        android:layout_toEndOf="@+id/btnAtten"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnAtten"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="50dp"
        android:background="@android:color/holo_green_light"
        android:text="Going"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNotAtten"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvVenue"
        android:layout_alignTop="@+id/btnAtten"
        android:background="@android:color/holo_red_dark"
        android:text="Not Going"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="227dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:text="Organizer"
        android:textSize="18sp" />
</RelativeLayout>